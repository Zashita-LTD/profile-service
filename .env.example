# Profile Service - Digital Biographer
# v0.4.0

# ========== Neo4j ==========
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ========== PostgreSQL ==========
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=profile
POSTGRES_PASSWORD=profile123
POSTGRES_DB=profile_db

# ========== ClickHouse (Life Stream) ==========
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=life_stream

# ========== MinIO (Media Storage) ==========
MINIO_ENDPOINT=localhost:9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=media-storage
MINIO_SECURE=false

# ========== ChromaDB (Embeddings) ==========
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# ========== Kafka ==========
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=profile-service
KAFKA_TOPICS=events.email,events.linkedin,events.resume
KAFKA_AGENT_TOPIC=agent.a2a

# ========== AI - Gemini ==========
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_VISION_MODEL=gemini-1.5-pro

# ========== AI - OpenAI (fallback) ==========
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ========== Pattern Miner ==========
PATTERN_MINER_SCHEDULE=0 3 * * *  # Daily at 3 AM
PATTERN_MINER_BATCH_SIZE=1000
PATTERN_MINER_MIN_CLUSTER_SIZE=3

# ========== Media Settings ==========
MEDIA_MAX_FILE_SIZE=104857600  # 100MB
MEDIA_ENCRYPTION_KEY=  # 32 bytes, base64 encoded (auto-generated if empty)

# ========== Agent Settings ==========
AGENT_MAX_ITERATIONS=10
AGENT_DEFAULT_MODEL=gemini-1.5-flash

# ========== API Settings ==========
API_HOST=0.0.0.0
API_PORT=8002
API_DEBUG=true
